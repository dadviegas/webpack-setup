    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "standard": "^10.0.2",
    "melpack-web-builder": "^2.0.8",
    "melpack-jasmine-build": "^2.0.1",
    "melpack-module-builder": "^2.0.6"
  },
  "standard": {
    "ignore": [
      "/dist/"
    ],
    "globals": [
      "it",
      "xit",
      "describe",
      "beforeEach",
      "before",
      "expect",
      "spyOn",
      "beforeAll",
