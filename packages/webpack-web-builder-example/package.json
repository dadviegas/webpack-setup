{
  "name": "melpack-web-builder-example",
  "version": "1.0.0",
  "description": "",
  "main": "./lib/index.js",
  "scripts": {
    "pretest": "standard",
    "build": "webpack --env.environment=development",
    "build:qa": "webpack -p --env.environment=qa",
